<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <TextView
        style="@style/TextAppearance.AppCompat.Body1"
        tools:text="dsad"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:id="@+id/item_message_contact_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <TextView
        android:layout_marginStart="8dp"
        tools:text="dsadsads"
        android:id="@+id/item_message_contact_desc"
        app:layout_constraintStart_toEndOf="@id/item_message_contact_title"
        app:layout_constraintBaseline_toBaselineOf="@id/item_message_contact_title"
        app:layout_constraintEnd_toStartOf="@id/item_message_contact_hash"
        android:layout_width="0dp"
        android:maxLines="1"
        android:layout_height="wrap_content" />
    <TextView
        android:textAllCaps="true"
        style="@style/Base.TextAppearance.AppCompat.Body1"
        android:textColor="@color/colorPrimary"
        tools:text="dsadsa"
        android:id="@+id/item_message_contact_hash"
        app:layout_constraintBaseline_toBaselineOf="@id/item_message_contact_title"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
</androidx.constraintlayout.widget.ConstraintLayout>